{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-var":2,
        "prefer-const":2,
        "indent": [ 1, 4 ],
        "max-statements": 0,
        "eqeqeq": [2,"smart"],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 1, "always" ],
        "semi-spacing": 2,
        "block-scoped-var": 2,
        "curly": 2,
        "brace-style": [2, "1tbs"],
        "camelcase": 0,
        "eol-last": 2,
        "new-cap": 1,
        "no-extend-native": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 1,
        "no-multi-spaces": 2,
        "no-use-before-define": [2, "nofunc"],
        "quotes": [0, "single", "avoid-escape"],
        "space-unary-ops": 2,
        "keyword-spacing": 1,
        "space-before-function-paren": 0,
        "space-in-parens": 2,
        "strict": [0],
        "no-underscore-dangle": 0,
        "comma-dangle": ["warn", "never"]
    }
}